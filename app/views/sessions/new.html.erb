<% provide(:title, "Log in") %>
<h1>Log in</h1>
<%= form_for(:session, url: login_path) do |f| %>

<div class="form-group-row"> 
  <div class="col-sm-2"><%= f.label :email %>  </div>
  <div class="col-sm-10"> <%= f.email_field :email, class: 'form-control' %>  </div>
</div>

<div class="form-group-row">
  <div class="col-sm-2"> <%= f.label :password %>  </div>
  <div class="col-sm-10"> <%= f.password_field :password, class: 'form-control' %>  </div>
</div>

<div class="form-group-row">
  <%= f.submit "Log in", class: "btn btn-primary" %>
  <% end %>
</div>
<p>New user? <%= link_to "Sign up now!", new_user_path %></p>

