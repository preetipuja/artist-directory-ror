<%= form_for @artist, html: { multipart: true } do |f| %>
<%= render 'shared/error_messages', obj: @artist %>
<div class="form-group row">
  <div class="col-sm-2"><%= f.label :name %></div>
  <div class="col-sm-10"><%= f.text_field :name, class: 'form-control', required: true %></div>
</div>

<div class="form-group row">
  <div class="col-sm-2"><%= f.label :email %></div>
  <div class="col-sm-10"><%= f.email_field :email, class: 'form-control', required: true %></div>
</div>

<div class="form-group row"> 
  <div class="col-sm-2"><%= f.label :location %></div>
  <div class="col-sm-10"><%= f.text_field :location, class: 'form-control', required: true %></div>
</div>

<div class="form-group row">
  <div class="col-sm-2"><%= f.label :year_of_birth %></div>
  <div class="col-sm-10"><%= f.date_select :year_of_birth, :start_year => 1930, :end_year=>18.years.ago.year,  class: 'form-control', required: true %></div>
</div>

<div class="form-group row">
  <div class="col-sm-2"><%= f.label :category_id %></div>
  <div class="col-sm-10"><%= f.collection_select :category_id, Category.all, :id, :name, prompt: true, class: 'form-control', required: true %></div>
</div>

<div class="form-group row">
  <%= f.submit :class=>"btn btn-primary" %>
  <%= link_to '<button type="button", class="btn btn-primary">Back</button>'.html_safe, artists_path %>
</div>
<% end %>


